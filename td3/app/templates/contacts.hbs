<h2>Contacts</h2>




<table class="table">
  <thead>
  <tr>
    <th scope="col">Nom</th>
    <th scope="col">Prenom</th>
    <th scope="col">Mail</th>
    <th scope="col">Actions</th>
  </tr>
  </thead>
  <tbody>
    {{#each model.datas as |contact|}}
      <tr>
        <td>{{contact.nom}}</td>
        <td>{{contact.prenom}}</td>
        <td>{{contact.email}}</td>
        <td>
          {{#link-to 'contacts.update' contact.id class="btn btn-secondary btn-sm"}}
            {{fa-icon "edit"}}
          {{/link-to}}
          <button {{action "delete" contact}} class="btn btn-danger btn-sm">{{fa-icon "remove"}}</button>
        </td>
      </tr>
    {{/each}}

  </tbody>
</table>




{{#link-to 'contacts.add' class="btn btn-primary"}}
  Ajouter contact
{{/link-to}}
{{outlet}}